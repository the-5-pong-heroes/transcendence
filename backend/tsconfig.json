// ################################## BACKEND #################################
{
  // path to another configuration file to inherit from
  "extends": "../tsconfig.base.json",
  // patterns to include in the program
  "include": ["src/*", "test/*"],
  // TypeScriptâ€™s configuration & how the language should work
  "compilerOptions": {
    // base directory to resolve non-absolute module names
    "baseUrl": "./",
    // includes a set of type definitions for built-in JS APIs
    "lib": ["ESNext"],
    // sets the module system for the program
    "module": "commonjs",
    // files will be emitted into this directory
    "outDir": "./dist",
    // https://www.typescriptlang.org/tsconfig#esModuleInterop
    "esModuleInterop": true
  }
}
